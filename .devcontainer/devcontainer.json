{
  "name": "Python 3",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "main.py" // Changed to main.py for FastAPI
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; pip3 install --user fastapi uvicorn; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "echo 'To start FastAPI: uvicorn main:app --host 0.0.0.0 --port 8000 --reload'"
  },
  "portsAttributes": {
    "8501": {
      "label": "Streamlit",
      "onAutoForward": "openPreview"
    },
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "openPreview"
    },
    "3000": {
      "label": "React Frontend",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501,
    8000,
    3000
  ]
}